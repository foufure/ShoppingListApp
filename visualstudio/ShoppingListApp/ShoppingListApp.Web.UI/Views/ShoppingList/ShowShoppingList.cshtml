@using ShoppingListApp.Domain.Entities;
@model ShoppingList

@{
    ViewBag.Title = "ShowDueShoppingList";
}

<div class="container-fluid">
    <div class="row">
        <span class="btn btn-primary navbar-btn btn-lg text-uppercase">@Model.ShoppingListName</span>
        <span class="pull-right">@Model.ShoppingListDueDate.ToString("d")</span>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ShoppingListLine line in @Model.ShoppingListContent)
                {
                    <tr>
                        <td class="">
                            @line.ArticleToBuy.ArticleName
                        </td>
                        <td class="">
                            @line.QuantityToBuy
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row">
        @Html.ActionLink("Back To ShoppingLists", "ShoppingLists", "ShoppingList", null, new { @class = "btn btn-success navbar-btn btn-lg" })
    </div>
</div>


@using ShoppingListApp.i18n.Utils
@using ShoppingListApp.Domain.Entities
@model ShoppingList

<div class="container-fluid">
    <div class="row">
        <span class="btn btn-primary navbar-btn btn-lg text-uppercase">@ShoppingListApp.i18n.Resources.Views.ShoppingList.ShoppingListsCommon.EditShoppingList</span>
    </div>
    <div class="row">
        @using (@Html.BeginForm("SaveShoppingList", "ShoppingList"))
        {
            <div class="form-group">
                @Html.ValidationSummary("", new { @class="text-danger" })
                @Html.HiddenFor(shoppinglist => shoppinglist.ShoppingListID, new { @class="form-control" })
                @Html.Label(@ShoppingListApp.i18n.Resources.Views.ShoppingList.ShoppingListsCommon.Name)
                @Html.TextBoxFor(shoppinglist => shoppinglist.ShoppingListName, new { @class = "form-control" })
                @Html.Label(@ShoppingListApp.i18n.Resources.Views.ShoppingList.ShoppingListsCommon.DueDate)
                @Html.TextBoxFor(shoppinglist => shoppinglist.ShoppingListDueDate, String.Format(CultureHelper.getCurrentUICulture(), "{0:d}", Model.ShoppingListDueDate), new { @class = "form-control", @id = "_datetimepicker_" + CultureHelper.getCurrentUICulture(), type = "text" })
            </div>

            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@ShoppingListApp.i18n.Resources.Views.ShoppingList.ShoppingListsCommon.Name</th>
                            <th>@ShoppingListApp.i18n.Resources.Views.ShoppingList.ShoppingListsCommon.Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < @Model.ShoppingListContent.Count(); i++)
                        {
                            <tr> 
                                @Html.HiddenFor(shoppinglist => shoppinglist.ShoppingListContent[i].ArticleToBuy.ArticleID)
                                @Html.HiddenFor(shoppinglist => shoppinglist.ShoppingListContent[i].ArticleToBuy.ArticleName)
                                <td>
                                    @Html.Label(Model.ShoppingListContent[i].ArticleToBuy.ArticleName)
                                </td>
                                <td>
                                    @Html.TextBoxFor(shoppinglist => shoppinglist.ShoppingListContent[i].QuantityToBuy)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div>
                <input type="submit" value=@ShoppingListApp.i18n.Resources.Views.ShoppingList.ShoppingListsCommon.Save class="btn btn-success navbar-btn btn-lg" />
            </div>

        }
    </div>
    @Html.Partial("BackToShoppingLists")
</div>


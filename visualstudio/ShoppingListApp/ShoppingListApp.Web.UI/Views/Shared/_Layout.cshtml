<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/shoppinglistappscripts")
    <title>@ShoppingListApp.i18n.Resources.Views.Shared._Layout.AppTitle</title>
</head>
<body class="bg-info">

    <div class="col-xs-0 col-sm-2 col-md-4 col-lg-4">

    </div>

    <div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
        <div class="row well-sm">
            <div class="pull-left">
                @Html.Partial("LoginStatus")
            </div>
            <div class="btn-group-xs pull-right">
                @Html.Partial("GetUserCulture")
            </div>
        </div>
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <span class="pull-right small">2015 - Jonathan Orditz</span>
            <span class="glyphicon glyphicon-copyright-mark pull-right"></span>
        </div>
    </div>

    <div class="col-xs-0 col-sm-2 col-md-4 col-lg-4">

    </div>

</body>
</html>
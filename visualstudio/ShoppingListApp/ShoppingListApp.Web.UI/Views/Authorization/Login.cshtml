@model ShoppingListApp.Web.UI.Models.LoginViewModel

<div class="panel">
    <div class="panel-heading">
        <h3>@ShoppingListApp.i18n.Resources.Views.Authorization.LoginCommon.LogIn</h3>
    </div>
    <div class="panel-body">
        <p class="lead">@ShoppingListApp.i18n.Resources.Views.Authorization.LoginCommon.LogInMessage</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>@ShoppingListApp.i18n.Resources.Views.Authorization.LoginCommon.UserName</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>@ShoppingListApp.i18n.Resources.Views.Authorization.LoginCommon.Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <input type="submit" value=@ShoppingListApp.i18n.Resources.Views.Authorization.LoginCommon.LogIn class="btn btn-primary" />
        }
    </div>
</div>
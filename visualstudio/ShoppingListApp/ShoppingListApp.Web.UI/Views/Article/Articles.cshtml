@model IEnumerable<Article>

<div class="panel panel-primary">
    <div class="panel-heading text-uppercase">
        <h1 class="panel-title text-uppercase">@ShoppingListApp.i18n.Resources.Views.Home.IndexCommon.Items</h1>
    </div>

    <div class="panel-body">
        <table class="table">
            <tbody>
                @foreach (Article article in @Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(@article.ArticleName.ToString(), "ModifyArticle", "Article", new { articleToModifyID = article.ArticleID }, new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @using (@Html.BeginForm("RemoveArticle", "Article"))
                            {
                                @Html.Hidden("articleToRemoveID", article.ArticleID)
                                <button typeof="submit" class="btn btn-danger">@ShoppingListApp.i18n.Resources.Views.Home.IndexCommon.Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer clearfix">
        @using (@Html.BeginForm("AddNewArticle", "Article"))
        {
            @Html.TextBox("newArticleName", @ShoppingListApp.i18n.Resources.Views.Item.ItemsCommon.YourItemName, new { @autofocus = "autofocus" })
            <button typeof="submit" class="btn btn-success">@ShoppingListApp.i18n.Resources.Views.Item.ItemsCommon.AddNewItem</button>
        }
    </div>
</div>
<div>
    @Html.Partial("BackToMainMenu")
</div>